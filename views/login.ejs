<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vacation Tour</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <link href='https://fonts.googleapis.com/css?family=Aclonica' rel='stylesheet'>
    <link rel="stylesheet" href="/public/css/four.css">
    <link rel="stylesheet" href="https://www.unpkg.com/bulma@0.9.3/css/bulma.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="navbar-brand"></div>
            <a href="/" class="satu">VacaTionTouR <img src="/public/img/coconut.png" width="30px" height="25px"></a>
                <% if (user) { %>
                    <a class="nav" href="/admin/product">Penginapan</a>
                    <a class="nav" href="/admin/supplier">Penyedia</a>
                <% } %>
                <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                </a>
            <div class="navbar-menu">
                <div class="navbar-end">
                    <div class="navbar-item">
                        <div class="mx-3" id="userEmail">
                            <%= user.email %>
                        </div>
                        <div class="buttons">
                            <%- (!user ? '<a href="/user/login" class="btn btn-primary">Login</a>' : '<a href="/user/logout" id="btnlogout" class="btn btn-primary" onclick="loadLogout()">Logout</a>') %>
                            <button id="btnload" class="button is-loading" style="display: none; width: 150px;"></button>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    <div class="kotak">
        <div id="app" class="container is-max-desktop mt-5">
        <h1 class="title">Login</h1>
        <form action="/user/login" method="post" name="login">
            <div class="field">
                <p class="control has-icons-left has-icons-right">
                    <input class="input" type="email" placeholder="email.com" name="email" value="">
                    <span class="icon is-small is-left">
                        <i class="fas fa-user-alt"></i>
                    </span>
                </p>
            </div>
            <div class="field">
                <p class="control has-icons-left">
                    <input class="input" type="password" placeholder="password" name="password" value="">
                    <span class="icon is-small is-left">
                        <i class="fas fa-lock"></i>
                    </span>
                </p>
            </div>
            <% if (message) { %>
                <div class="field">
                    <span class="tag is-link is-danger"> <%= message %> </span>
                </div>
            <% } %>
            <div class="bawah">
                <div class="field">
                <p class="control">
                    <a href="/" id="home" class="btn btn-light">Home</a>
                    <button id="login" class="btn btn-dark" onclick="loadLogin()">Login</button>
                </p>
            </div>
            </div>
        </form>
    </div>
    </div>
</body>
</html>